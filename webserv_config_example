#CONFIG

#listen to specify host and port
#if port not specified listen on 80
#if listen not specifed -> error
#root directories should be set up with trailing "/"
#location paths should end with "/" if designed for folders
#error_page: error_code relative_path (relative to root)
server {
    listen 127.0.0.1;
    port 8080;
    error_page 404 /Users/sergeykozlov/wsrv12/www/error/404.html;
    error_page 405 /Users/sergeykozlov/wsrv12/www/error/405.html;
    client_max_body_size 1024;

 location / {
    root /Users/sergeykozlov/wsrv12/www/final/;
    methods POST GET;
    autoindex on; #turned on by default;
    #index index.html; #specify default file
 }

 location /images/hero.jpg
 {
    root /Users/sergeykozlov/wsrv12/www/final/;
    return /images/profile.jpg;
 }
 location /upload
 {
     root /Users/sergeykozlov/wsrv12/www/final/;
     file_upload on;
     methods POST GET DELETE PUT;
 }

location /images
 {
    root /Users/sergeykozlov/wsrv12/www/final/images/;
    autoindex on;
    methods POST GET DELETE;
 }
 location *.php {
    root /Users/sergeykozlov/wsrv12/www/final/; #FOR CGI PATH SHOULD BE ABSOLUTE
    cgi_pass /usr/local/bin/php-cgi; #IS NOT VALID CGI specify full path
 }
  location *.bla {
     root /Users/sergeykozlov/wsrv12/www/final/; #FOR CGI PATH SHOULD BE ABSOLUTE
     cgi_pass /Users/sergeykozlov/wsrv12/cgi_tester; #IS NOT VALID CGI specify full path
      client_max_body_size 300000000;
  }
  mime_conf_path /Users/sergeykozlov/wsrv12/mime.conf
}
server {
    listen 127.0.0.1;
    port 8080;
    server_name localhost;
    client_max_body_size 1024;
 location / {
    root /Users/sergeykozlov/wsrv12/www/42_tester/YoupiBanane/;
    methods GET;
    autoindex on;
 }
 location /put_test
 {
    root /Users/sergeykozlov/wsrv12/www/42_tester/YoupiBanane/upload/;
    file_upload on;
    methods GET PUT;
 }
  location *.bla {
     root /Users/sergeykozlov/wsrv12/www/42_tester/YoupiBanane/; #FOR CGI PATH SHOULD BE ABSOLUTE
     cgi_pass /Users/sergeykozlov/wsrv12/cgi_tester;
     client_max_body_size 300000000;
     methods POST GET;
  }
  location /post_body
  {
      root /Users/sergeykozlov/wsrv12/www/42_tester/YoupiBanane/;
      client_max_body_size 100;
      root /Users/megagosha/42/webserv/www/42_tester/YoupiBanane/;
      methods POST;
  }
  location /directory
  {
    root /Users/sergeykozlov/wsrv12/www/42_tester/YoupiBanane/;
    methods GET POST;
    index youpi.bad_extension;
    autoindex off;
  }
    mime_conf_path /Users/sergeykozlov/wsrv12/mime.conf
 }

